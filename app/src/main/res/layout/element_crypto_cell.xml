<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/element_crypro_cell_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cryptos" />

    <TextView
        android:id="@+id/element_crypro_cell_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintEnd_toEndOf="@+id/element_crypro_cell_icon"
        app:layout_constraintStart_toStartOf="@+id/element_crypro_cell_icon"
        app:layout_constraintTop_toBottomOf="@+id/element_crypro_cell_icon" />

    <TextView
        android:id="@+id/element_crypro_cell_text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code"
        app:layout_constraintEnd_toEndOf="@+id/element_crypro_cell_text_name"
        app:layout_constraintStart_toStartOf="@+id/element_crypro_cell_text_name"
        app:layout_constraintTop_toBottomOf="@+id/element_crypro_cell_text_name" />
</androidx.constraintlayout.widget.ConstraintLayout>