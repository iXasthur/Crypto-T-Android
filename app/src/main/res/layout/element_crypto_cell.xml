<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/element_crypro_cell_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_cryptos"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/element_crypro_cell_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintEnd_toEndOf="@+id/element_crypro_cell_icon"
        app:layout_constraintStart_toStartOf="@+id/element_crypro_cell_icon"
        app:layout_constraintTop_toBottomOf="@+id/element_crypro_cell_icon" />

    <TextView
        android:id="@+id/element_crypro_cell_text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="@string/code"
        app:layout_constraintEnd_toEndOf="@+id/element_crypro_cell_text_name"
        app:layout_constraintStart_toStartOf="@+id/element_crypro_cell_text_name"
        app:layout_constraintTop_toBottomOf="@+id/element_crypro_cell_text_name" />
</androidx.constraintlayout.widget.ConstraintLayout>